</nav>

<!-- main container -->
<div class="container">
  <!-- first row containg the header-->
  <div class="row">
    <div id="mainHead" class="col-md-6 col-md-offset-3">
      <h1>Welcome <span class="member-name">Mike </span>!!!!</h1>
      <h2>Let's add some bookmarks</h2>
      <h2>12:52 PM, Monday</h2>
    </div>
  </div>
  <!-- second row conataining the google search bar -->
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div>
        <form id="googleForm">
          <label for="google">Google</label><br />
          <input type="text" id="google" /><br />
          <button type="submit" id="googleSubmit" class="btn btn-primary">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div>
        {{!-- button to trigger modal --}}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addBookmarkModal">
          Add a bookmark
        </button>
        <!-- Modal -->
        <div class="modal fade" id="addBookmarkModal" tabindex="-1" aria-labelledby="addBookmarkModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addBookmarkModal">Add a Bookmark</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                {{!-- form to add new bookmark --}}
                <form class="create-form">
                  <div class="form-group">
                    <div class="d-flex justify-content-center">
                      <label for="bookmark">Bookmark Title:</label>
                      <input type="text" id="title" name="name" />
                    </div>
                    <div>
                      <label for="bookmark">Bookmark URL:</label>
                      <input type="text" id="url" name="name" />
                    </div>
                    <div>
                      <label for="bookmark">Bookmark Image:</label>
                      <input type="text" id="image" name="name" />
                    </div>
                  </div>
                  <button class="btn btn-success" id="bookmarkSubmit" type="submit">Save your Bookmark</button>
                </form>
                {{!--END of form to add new bookmark --}}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
        {{!--END OF MODAL --}}


      </div>

    </div>
  </div>
</div>
{{!-- div to display all bookmarks --}}
<div class="row">
  <div id="bookmarkDiv" class="col-md-6 col-md-offset-3">
    {{#each bookmark}}

    <div>
      <p>{{dataValues.title}}</p>
      <p><a target="_blank" href="https://{{dataValues.url}}"> {{dataValues.url}} </a></p>
      <button class="delete-bookmark btn btn-danger" data-id="{{dataValues.id}}">DELETE</button>
    </div>

    {{else}}

    <p>No Bookmarks Saved yet.</p>

    {{/each}}

  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
